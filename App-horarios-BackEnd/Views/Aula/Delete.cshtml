@model App_horarios_BackEnd.Models.BlocoAula

@{
ViewData["Title"] = "Eliminar Bloco de Aula";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0 text-danger">Eliminar Bloco de Aula</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>

    <div class="alert alert-warning border border-danger mb-4">
        <strong>Tem a certeza que deseja eliminar este bloco?</strong><br />
        Esta ação é <u>irreversível</u>.
    </div>

    <div class="card shadow-sm p-4 rounded bg-white border mb-4">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold text-muted">Duração</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Duracao)</dd>

            <dt class="col-sm-4 fw-semibold text-muted">Disciplina</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Disciplina.Nome)</dd>

            <dt class="col-sm-4 fw-semibold text-muted">Sala</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Sala.Nome)</dd>

            <dt class="col-sm-4 fw-semibold text-muted">Tipo de Aula</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoAula.Tipo)</dd>

        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
