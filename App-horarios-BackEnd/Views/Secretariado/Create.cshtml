@model App_horarios_BackEnd.Models.Secretariado

@{
ViewData["Title"] = "Criar Secretariado";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Novo Secretariado</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Maria Silva" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Ex: maria.silva@ipt.pt" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Escola -->
                <div class="mb-3">
                    <label asp-for="EscolaId" class="form-label fw-semibold">Escola</label>
                    <select asp-for="EscolaId" class="form-select" asp-items="ViewBag.EscolaId">
                        <option value="">Selecione uma escola…</option>
                    </select>
                    <span asp-validation-for="EscolaId" class="text-danger small"></span>
                </div>

                <!-- Curso -->
                <div class="mb-3">
                    <label asp-for="CursoId" class="form-label fw-semibold">Curso</label>
                    <select asp-for="CursoId" class="form-select" asp-items="ViewBag.CursoId">
                        <option value="">Selecione um curso…</option>
                    </select>
                    <span asp-validation-for="CursoId" class="text-danger small"></span>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-ipt me-2">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
