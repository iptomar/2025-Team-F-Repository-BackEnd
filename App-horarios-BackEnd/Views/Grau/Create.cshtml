@model App_horarios_BackEnd.Models.Grau

@{
ViewData["Title"] = "Criar Grau";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Criar Novo Grau</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Licenciatura" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Duração -->
                <div class="mb-3">
                    <label asp-for="Duracao" class="form-label fw-semibold">Duração</label>
                    <input asp-for="Duracao" class="form-control" placeholder="Ex: 3 " />
                    <span asp-validation-for="Duracao" class="text-danger small"></span>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-ipt me-2">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
