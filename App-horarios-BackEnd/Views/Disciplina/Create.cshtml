@model App_horarios_BackEnd.Models.Disciplina
@{
ViewData["Title"] = "Criar Disciplina";
}

<div class="container mt-4">
    <h2 class="text-title fw-bold mb-3">Criar Disciplina</h2>

    <form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-white border">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Nome -->
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger small"></span>
        </div>

        <!-- Ano, Semestre, Tipo -->
        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Ano" class="form-label fw-semibold">Ano</label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Semestre" class="form-label fw-semibold">Semestre</label>
                <input asp-for="Semestre" class="form-control" />
                <span asp-validation-for="Semestre" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Tipo" class="form-label fw-semibold">Tipo</label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger small"></span>
            </div>
        </div>

        <!-- Grupo de Horas em colunas de 3 -->
        <div class="row row-cols-1 row-cols-md-3 g-3 mb-3">
            <div>
                <label asp-for="HorasTeorica" class="form-label fw-semibold">Horas Teórica</label>
                <input asp-for="HorasTeorica" class="form-control" />
                <span asp-validation-for="HorasTeorica" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasPratica" class="form-label fw-semibold">Horas Prática</label>
                <input asp-for="HorasPratica" class="form-control" />
                <span asp-validation-for="HorasPratica" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasTp" class="form-label fw-semibold">Horas TP</label>
                <input asp-for="HorasTp" class="form-control" />
                <span asp-validation-for="HorasTp" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasSeminario" class="form-label fw-semibold">Horas Seminário</label>
                <input asp-for="HorasSeminario" class="form-control" />
                <span asp-validation-for="HorasSeminario" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasLaboratorio" class="form-label fw-semibold">Horas Laboratório</label>
                <input asp-for="HorasLaboratorio" class="form-control" />
                <span asp-validation-for="HorasLaboratorio" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasCampo" class="form-label fw-semibold">Horas Campo</label>
                <input asp-for="HorasCampo" class="form-control" />
                <span asp-validation-for="HorasCampo" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasOrientacao" class="form-label fw-semibold">Horas Orientação</label>
                <input asp-for="HorasOrientacao" class="form-control" />
                <span asp-validation-for="HorasOrientacao" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasEstagio" class="form-label fw-semibold">Horas Estágio</label>
                <input asp-for="HorasEstagio" class="form-control" />
                <span asp-validation-for="HorasEstagio" class="text-danger small"></span>
            </div>
            <div>
                <label asp-for="HorasOutras" class="form-label fw-semibold">Horas Outras</label>
                <input asp-for="HorasOutras" class="form-control" />
                <span asp-validation-for="HorasOutras" class="text-danger small"></span>
            </div>
        </div>

        <!-- Botões -->
        <div class="mt-4 d-flex justify-content-start">
            <button type="submit" class="btn btn-ipt me-2">
                <i class="bi bi-check-circle"></i> Criar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
