@model App_horarios_BackEnd.Models.Disciplina

@{
ViewData["Title"] = "Detalhes da Disciplina";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Detalhes da Disciplina</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>

    <div class="card shadow-sm p-4 rounded bg-white border mb-4">
        <dl class="row mb-0">

            <!-- Nome -->
            <dt class="col-sm-3 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <!-- Escola -->
            <dt class="col-sm-3 fw-semibold text-muted">Escola</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Escola.Nome)</dd>

            <!-- Curso -->
            <dt class="col-sm-3 fw-semibold text-muted">Curso</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Curso.Nome)</dd>

            <!-- Ano, Semestre, Tipo -->
            <dt class="col-sm-3 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Ano)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ano)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Semestre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Semestre)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">@Html.DisplayNameFor(model => model.Tipo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tipo)</dd>

            <!-- Horas -->
            <dt class="col-sm-3 fw-semibold text-muted">Horas Teórica</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasTeorica)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Prática</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasPratica)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas TP</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasTp)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Seminário</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasSeminario)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Laboratório</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasLaboratorio)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Campo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasCampo)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Orientação</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasOrientacao)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Estágio</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasEstagio)</dd>

            <dt class="col-sm-3 fw-semibold text-muted">Horas Outras</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HorasOutras)</dd>

        </dl>
    </div>

    <div class="d-flex">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-ipt me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>
