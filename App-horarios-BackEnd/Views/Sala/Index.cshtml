@model IEnumerable<App_horarios_BackEnd.Models.Sala>
@{
    ViewData["Title"] = "Salas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Lista de Salas</h2>
        <a asp-action="Create" class="btn btn-ipt">
            <i class="bi bi-plus-lg"></i> Nova Sala
        </a>
    </div>

    <!-- ▸ Pesquisa -->
    <form asp-action="Pesquisar" method="get" class="mb-3">
        <div class="input-group">
            <input type="text"
                   name="search"
                   value="@ViewData["Search"]"
                   class="form-control"
                   placeholder="Pesquisar por nome, capacidade, tipo ou escola…"
                   aria-label="Pesquisar Sala" />
            <button class="btn btn-ipt" type="submit">
                <i class="bi bi-search"></i> Pesquisar
            </button>
        </div>
    </form>

    <!-- ▸ Tabela (igual à tua) -->
    <table class="table table-hover table-bordered shadow-sm rounded bg-white">
        <thead class="table-success text-dark">
        <tr>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().Capacidade)</th>
            <th class="text-center">Tipo</th>
            <th class="text-center">Escola</th>
            <th class="text-center">Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="text-center">@Html.DisplayFor(modelItem => item.Nome)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.Capacidade)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.TipoAula.Tipo)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.Escola.Nome)</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                    <i class="bi bi-eye-fill"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash-fill"></i>
                </a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@section Scripts {
    <!-- Apaga o termo e volta à lista completa quando o campo fica vazio -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const input = document.querySelector('input[name="search"]');
            input.addEventListener("input", function () {
                if (this.value.trim() === "") {
                    window.location.href = "/Sala";
                }
            });
        });
    </script>
}



