@model App_horarios_BackEnd.Models.Escola

@{
ViewData["Title"] = "Editar Escola";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Editar Escola</h2>
        
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="shadow-sm p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Escola Superior de Gestão de Tomar" required />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Abreviação -->
                <div class="mb-3">
                    <label asp-for="Abreviacao" class="form-label fw-semibold">Abreviação</label>
                    <input asp-for="Abreviacao" class="form-control" placeholder="Ex: ESGT" />
                    <span asp-validation-for="Abreviacao" class="text-danger small"></span>
                </div>

                <!-- Localização -->
                <div class="mb-3">
                    <label asp-for="LocalizacaoId" class="form-label fw-semibold">Localização</label>
                    <select asp-for="LocalizacaoId" class="form-select" asp-items="@(ViewData["LocalizacaoId"] as SelectList)">
                        <option value="">Selecione uma localização...</option>
                    </select>
                    <span asp-validation-for="LocalizacaoId" class="text-danger small"></span>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-ipt me-2">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
