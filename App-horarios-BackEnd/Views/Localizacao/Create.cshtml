@model App_horarios_BackEnd.Models.Localizacao

@{
ViewData["Title"] = "Criar Localização";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Criar Nova Localidade</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            
            <form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Campus de Tomar" required/>
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Abreviação -->
                <div class="mb-3">
                    <label asp-for="Abreviacao" class="form-label fw-semibold">Abreviação</label>
                    <input asp-for="Abreviacao" class="form-control" placeholder="Ex: CT" required/>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-ipt me-2">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

}
