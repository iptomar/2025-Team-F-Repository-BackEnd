@model App_horarios_BackEnd.Models.CategoriaDocente

@{
ViewData["Title"] = "Eliminar Categoria Docente";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0 text-danger">Eliminar Categoria</h2>
    </div>

    <div class="alert alert-warning border border-danger mb-4">
        <strong>Tem a certeza que deseja eliminar esta categoria?</strong>
        <br />
        Esta ação é irreversível.
    </div>

    <div class="card shadow-sm p-4 rounded bg-white border mb-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold text-muted">
                Código
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt class="col-sm-3 fw-semibold text-muted">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
