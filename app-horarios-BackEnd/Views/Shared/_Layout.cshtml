<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewData["Title"] - App Horários</title>

    <!-- Bootstrap & Syncfusion -->
    <link href="https://cdn.syncfusion.com/ej2/29.2.9/bootstrap5.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- CSS do projeto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        html, body {
            height: 100%;
            overflow-x: hidden;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        footer.fixed-bottom {
            z-index: 1040;
        }

        /* SIDEBAR */
        #sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #ffffff;
            color: #333;
            border-right: 1px solid #e9f5e4;
            transition: all 0.3s;
            z-index: 1030;
        }

        #sidebar.collapsed {
            width: 0;
            overflow: hidden;
        }

        /* MAIN CONTENT */
        #main-content {
            margin-left: 0;
            transition: all 0.3s;
        }

        #sidebar:not(.collapsed) ~ #main-content {
            margin-left: 250px;
        }

        /* SIDEBAR HEADER */
        .sidebar-header {
            padding: 1rem;
            font-size: 1.25rem;
            font-weight: bold;
            color: #78be20;
            background-color: #f1f1f1;
            border-bottom: 1px solid #dee2e6;
            text-align: center;
        }

        /* LINKS */
        .sidebar-link {
            color: #333;
            text-decoration: none;
            display: block;
            padding: 0.6rem 1.5rem;
            font-size: 0.95rem;
        }

        .sidebar-link:hover {
            background-color: #e9f5e4;
            color: #78be20;
        }

        .accordion-collapse .sidebar-link {
            background-color: #ffffff;
            color: #333;
        }

        .accordion-collapse .sidebar-link:hover {
            background-color: #e9f5e4;
            color: #78be20;
        }

        /* ACCORDION BUTTONS */
        .accordion-button {
            background-color: #ffffff !important;
            color: #78be20 !important;
            font-weight: bold;
            font-size: 1rem;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #e0e0e0;
        }

        .accordion-button:focus {
            box-shadow: none;
        }

        .accordion-button::after {
            filter: none;
        }

        .accordion-item {
            border-top: 1px solid #e0e0e0;
            background-color: #ffffff;
        }

        .accordion-body {
            padding: 0;
        }

        .accordion-body .sidebar-link {
            padding-left: 2rem;
            font-size: 0.92rem;
            color: #333;
        }

        .accordion-body .sidebar-link:hover {
            background-color: #e9f5e4;
            color: #78be20;
        }

        .sidebar-link.mt-3 {
            margin-top: 1rem;
            font-weight: bold;
            background-color: #f1f1f1;
            padding: 0.75rem 1rem;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
<div id="sidebar" class="collapsed">
    <div class="sidebar-header">
        App Horários
    </div>

    <!-- IPT -->
    <div class="accordion accordion-flush" id="accordionSidebar">
        <div class="accordion-item bg-dark border-0">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseIPT">
                    IPT
                </button>
            </h2>
            <div id="collapseIPT" class="accordion-collapse collapse" data-bs-parent="#accordionSidebar">
                <div class="accordion-body p-0">
                    <a class="sidebar-link" asp-controller="Localizacao" asp-action="Index">Localidades</a>
                    <a class="sidebar-link" asp-controller="Escola" asp-action="Index">Escolas</a>
                </div>
            </div>
        </div>

        <!-- Ensino -->
        <div class="accordion-item bg-dark border-0">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseEnsino">
                    Ensino
                </button>
            </h2>
            <div id="collapseEnsino" class="accordion-collapse collapse" data-bs-parent="#accordionSidebar">
                <div class="accordion-body p-0">
                    <a class="sidebar-link" asp-controller="Grau" asp-action="Index">Graus</a>
                    <a class="sidebar-link" asp-controller="Curso" asp-action="Index">Cursos</a>
                    <a class="sidebar-link" asp-controller="Sala" asp-action="Index">Salas</a>
                    <a class="sidebar-link" asp-controller="Aula" asp-action="Index">Aulas</a>
                </div>
            </div>
        </div>

        <!-- Comunidade -->
        <div class="accordion-item bg-dark border-0">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseComunidade">
                    Comunidade
                </button>
            </h2>
            <div id="collapseComunidade" class="accordion-collapse collapse" data-bs-parent="#accordionSidebar">
                <div class="accordion-body p-0">
                    <a class="sidebar-link" asp-controller="UnidadeDepartamental" asp-action="Index">Unidades
                        Departamentais</a>
                    <a class="sidebar-link" asp-controller="Professor" asp-action="Index">Professores</a>
                    <a class="sidebar-link" asp-controller="Secretariado" asp-action="Index">Secretariado</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Link fora do acordeão -->
    <a class="sidebar-link mt-3" asp-controller="ImportVisual" asp-action="Index">Importar Excel</a>
</div>

<div id="main-content">
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <button id="toggleSidebar" class="btn btn-outline-secondary me-3">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="ms-auto d-flex align-items-center">
                <div class="dropdown">
                    <a class="dropdown-toggle d-flex align-items-center" href="#" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle" height="32"
                             alt="Utilizador Avatar" loading="lazy"/>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Meu perfil</a></li>
                        <li><a class="dropdown-item" href="#">Definições</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdow n-item" href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>


    <!-- Footer fixo -->
    <footer class="footer bg-white border-top py-3 fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">&copy; 2025 - App Horários - 
                <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
            </span>
        </div>
    </footer>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById("toggleSidebar").addEventListener("click", function () {
        document.getElementById("sidebar").classList.toggle("collapsed");
    });
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
