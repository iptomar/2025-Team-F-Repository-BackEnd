<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - App Horários</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App_horarios_BackEnd.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                App Horários
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Localizacao" asp-action="Index">Locais</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Escola" asp-action="Index">Escolas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Curso" asp-action="Index">Cursos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Sala" asp-action="Index">Salas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="ImportVisual" asp-action="Index">Importar Excel</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container py-4">
    @RenderBody()
</main>

<footer class="footer mt-auto bg-white border-top py-3">
    <div class="container text-center">
        <span class="text-muted">&copy; 2025 - App Horários - <a asp-controller="Home" asp-action="Privacy">Política de Privacidade</a></span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
