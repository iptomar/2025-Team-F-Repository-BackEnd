@model IEnumerable<App_horarios_BackEnd.Models.Curso>

@{
ViewData["Title"] = "Cursos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Lista de Cursos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Novo Curso
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Escola)</th>
            <th>@Html.DisplayNameFor(model => model.First().Grau)</th>
            <th class="text-center">Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Escola.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Grau.Nome)</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
    @TempData["SuccessMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
</div>
}
