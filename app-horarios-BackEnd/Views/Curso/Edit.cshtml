@model App_horarios_BackEnd.Models.Curso

@{
ViewData["Title"] = "Editar Curso";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-title fw-bold mb-0">Editar Curso</h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="shadow-sm p-4 rounded bg-white border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Id oculto -->
                <input type="hidden" asp-for="Id" />

                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Engenharia Informática" required />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <!-- Escola -->
                <div class="mb-3">
                    <label asp-for="EscolaId" class="form-label fw-semibold">Escola</label>
                    <select asp-for="EscolaId" class="form-select" asp-items="ViewBag.EscolaId">
                        <option value="">-- Seleciona a Escola --</option>
                    </select>
                    <span asp-validation-for="EscolaId" class="text-danger small"></span>
                </div>

                <!-- Grau -->
                <div class="mb-3">
                    <label asp-for="GrauId" class="form-label fw-semibold">Grau</label>
                    <select asp-for="GrauId" class="form-select" asp-items="ViewBag.GrauId">
                        <option value="">-- Seleciona o Grau --</option>
                    </select>
                    <span asp-validation-for="GrauId" class="text-danger small"></span>
                </div>

                <!-- Localização -->
                <div class="mb-3">
                    <label asp-for="LocalizacaoId" class="form-label fw-semibold">Localização</label>
                    <select asp-for="LocalizacaoId" class="form-select" asp-items="ViewBag.LocalizacaoId">
                        <option value="">-- Seleciona a Localização --</option>
                    </select>
                    <span asp-validation-for="LocalizacaoId" class="text-danger small"></span>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-ipt me-2">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
