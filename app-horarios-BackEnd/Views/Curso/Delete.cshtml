@model App_horarios_BackEnd.Models.Curso

@{
ViewData["Title"] = "Eliminar Curso";
}

<h1>Eliminar Curso</h1>
<hr />

<div class="alert alert-warning" role="alert">
    <h5 class="mb-3">Tens a certeza que queres eliminar este curso?</h5>

    <div class="card shadow-sm p-4 bg-white rounded">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Escola)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Escola.Nome)
            </dd>

            
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Grau)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Grau.Nome)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
